{
  "name": "eufy-geo-platform",
  "version": "1.0.0",
  "description": "Eufy GEO (Generative Engine Optimization) Platform - AI-driven SEO strategy platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm-run-all build:*",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm-run-all test:*",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm-run-all lint:*",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "setup": "node scripts/setup.js",
    "deploy": "npm run build && npm run deploy:sync",
    "deploy:sync": "git add . && git commit -m 'ðŸš€ è‡ªåŠ¨éƒ¨ç½²: $(date)' && git push origin main"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keevingfu/eufygeo3.git"
  },
  "keywords": [
    "seo",
    "keyword-management", 
    "content-optimization",
    "graphql",
    "nextjs",
    "nestjs",
    "ai-overview",
    "p0-p5-grading",
    "geo",
    "generative-engine-optimization"
  ],
  "author": "Claude AI",
  "license": "MIT"
}