# Eufy GEO3 Environment Configuration Template
# 复制此文件为 .env 并填入实际值

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=https://github.com/username/repository.git
GITHUB_USERNAME=your_github_username
GITHUB_REPO_NAME=repository_name

# Backend Configuration  
BACKEND_PORT=4004
GRAPHQL_ENDPOINT=http://localhost:4004/graphql

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:4004/graphql

# Development Environment
NODE_ENV=development

# CI/CD Configuration
ENABLE_AUTO_SYNC=true
ENABLE_CI_CD=true
AUTO_COMMIT_MESSAGE="Auto-sync: Development updates"

# Security (请更改为安全的随机值)
JWT_SECRET=your-secure-jwt-secret-key
API_SECRET=your-secure-api-secret-key

# Feature Flags
ENABLE_PHASE2_FEATURES=true
ENABLE_TESTING_AUTOMATION=true